// Place your key bindings in this file to override the defaults
[
        //サジェスチョン操作
    {
        "key": "crtl+j",
        "command": "selectNextSuggestion",
        "when": "sugestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "crtl+k",
        "command": "selectPrevSuggestion",
        "when": "sugestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },

    //コマンドパレットの移動
    {
        "key": "crtl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "crtl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },


    // sidebar setting
    // show sidebar
    {
        "key": "ctrl+Space ctrl+Space",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "!explorerViewletVisible && !searchViewletVisible && !inDebugMode && vim.mode != 'SearchInProgressMode' && vim.mode != 'Insert'"
    },
    // hide sidebar
    {
        "key": "ctrl+Space ctrl+Space",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible && !searchViewletVisible && !inDebugMode && vim.mode != 'SearchInProgressMode' && vim.mode != 'Insert'"
    },

    {
        "key": "space l",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "explorerViewletVisible && explorerViewletFocus && !editorFocus && !inQuickOpen"
    },
    // disable to hide terminal panel
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    // close active editor
    {
        "key": "ctrl+w",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorIsOpen"
    },
    // move editor from terminal
    {
        "key": "Ctrl+space k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+y",
        "command": "references-view.findReferences",
        "when": "editorHasReferenceProvider"
    },
    // move right terminal
    {
        "key": "Ctrl+space l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    // move left terminal
    {
        "key": "Ctrl+space h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    // explorer
    // show explorer

    /*
    {
        "key": "ctrl+Space ctrl+e",
        "command": "workbench.view.explorer",
    },
    {
        "key": "ctrl+Space e",
        "command": "workbench.view.explorer",
    },
    */

    // grep search
    /*
    {
        "key": "ctrl+space ctrl+f",
        "command": "workbench.action.findInFiles",
        "when": "!searchInputBoxFocus"
    },
    {
        "key": "ctrl+space f",
        "command": "workbench.action.findInFiles",
        "when": "!searchInputBoxFocus"
    },
    */
    {
        "key": "ctrl+K",
        "command": "editor.action.showHover",
        "when": "editorTextFocus"
    }

]